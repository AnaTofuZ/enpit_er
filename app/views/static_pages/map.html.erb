<!DOCTYPE html>
<html>
  <head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
<div style='width: 800px;'>
   <!-- サイズはここでいじれる -->
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>
  </head>
  <body>
    <div id="map"></div>
    <script>
      var map;
      function initMap() {
        // 琉大の座標
        ryukyuUniv = {lat: 26.247582, lng: 127.765142}
        map = new google.maps.Map(document.getElementById('map'), {
          // 座標
          center: ryukyuUniv,
          // 拡大率
          zoom: 18
        });

        // マーカーを表示
        var marker = new google.maps.Marker({
        position: ryukyuUniv,
        map: map,
        title: 'なに見てんだよ'
        });

        // clickアクション, ページが遷移するよ
        marker.addListener('click', function() {
          location.href = "/friends";          
        });

      }
    </script>

    <%# Google Maps JavaScript APIのAPIキーをいれる%>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDIUL_zjzg3O4H49Y-oBvURqkssb2SH03k&callback=initMap"
    async defer></script>
  </body>
</html>
